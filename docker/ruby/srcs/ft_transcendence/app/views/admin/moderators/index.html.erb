<p id="notice"><%= notice %></p>

<h1>Moderators</h1>

<table class="table">
	<thead>
		<tr>
			<th scope="col">User</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @admin_moderators.each do |admin_moderator| %>
			<tr>
				<td><%= link_to admin_moderator.nickname, profile_path(admin_moderator) %></td>
				<td><%= link_to 'Destroy', admin_moderator_path(admin_moderator), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'New Moderator', new_admin_moderator_path %>
