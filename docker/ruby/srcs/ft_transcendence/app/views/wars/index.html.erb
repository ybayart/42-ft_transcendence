<p id="notice"><%= notice %></p>

<h1>Wars</h1>

<%= link_to raw('Back<br>'), :back if params[:guild_id] %>

<%= link_to 'New War', new_war_path if ready_for_war %>

<br>

<table class="table">
	<thead>
		<tr>
			<th scope="col">ID</th>
			<th scope="col">Guild 1</th>
			<th scope="col">Guild 2</th>
			<th scope="col">Points to win</th>
			<th scope="col">State</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @wars.each do |war| %>
			<tr>
				<td><%= war.id %></td>
				<td><%= link_to war.guild1.name, war.guild1 %></td>
				<td><%= link_to war.guild2.name, war.guild2 %></td>
				<td><%= war.points_to_win %></td>
				<td><%= war.state %></td>
				<td><%= link_to 'Show', war %></td>
			</tr>
		<% end %>
	</tbody>
</table>
