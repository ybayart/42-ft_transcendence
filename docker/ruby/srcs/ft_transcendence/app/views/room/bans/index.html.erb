<p id="notice"><%= notice %></p>

<h1>Room Bans</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>By</th>
      <th>Room</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_bans.each do |room_ban| %>
      <tr>
        <td><%= create_user_link(room_ban.user) %></td>
        <td><%= create_user_link(room_ban.by) %></td>
        <td><%= room_ban.room.name %></td>
        <td><%= room_ban.end_at %></td>
        <td><%= link_to 'Show', room_ban_path(@room, room_ban) %></td>
		<% if room_ban.end_at.future? %>
			<td><%= link_to 'Edit', edit_room_ban_path(@room, room_ban) %></td>
			<td><%= link_to 'Destroy', room_ban_path(@room, room_ban), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Ban', new_room_ban_path %> |
<%= link_to 'Back', @room %>
