<p id="notice"><%= notice %></p>

<h1>Room Members</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_members.each do |room_member| %>
      <tr>
        <td><%= create_user_link(room_member) %></td>
        <td><%= link_to 'Destroy', room_member_path(@room, room_member), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Member', new_room_member_path %> |
<%= link_to 'Back', @room %>
