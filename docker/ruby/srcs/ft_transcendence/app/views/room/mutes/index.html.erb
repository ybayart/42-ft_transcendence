<p id="notice"><%= notice %></p>

<h1>Room Mutes</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>By</th>
      <th>Room</th>
      <th>End at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @room_mutes.each do |room_mute| %>
      <tr>
        <td><%= create_user_link(room_mute.user) %></td>
        <td><%= create_user_link(room_mute.by) %></td>
        <td><%= room_mute.room.name %></td>
        <td><%= room_mute.end_at %></td>
        <td><%= link_to 'Show', room_mute_path(@room, room_mute) %></td>
		<% if room_mute.end_at.future? %>
			<td><%= link_to 'Edit', edit_room_mute_path(@room, room_mute) %></td>
			<td><%= link_to 'Destroy', room_mute_path(@room, room_mute), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
		<% end %>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Room Mute', new_room_mute_path %> |
<%= link_to 'Back', @room %>
