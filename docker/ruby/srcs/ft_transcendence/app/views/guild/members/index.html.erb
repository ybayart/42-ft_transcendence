<p id="notice"><%= notice %></p>

<h1>Guild Members</h1>

<table>
	<thead>
		<tr>
			<th>User</th>
			<th colspan="3"></th>
		</tr>
	</thead>

	<tbody>
		<% @guild_members.each do |guild_member| %>
			<tr>
				<td><%= create_user_link(guild_member) %></td>
				<td><%= link_to 'Destroy', guild_member_path(@guild, guild_member), method: :delete, data: { confirm: 'Are you sure?' }, remote: true %></td>
			</tr>
		<% end %>
	</tbody>
</table>

<br>

<%= link_to 'Back', @guild %>
