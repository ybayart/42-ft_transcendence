<div class="mb-3">
	<%= link_to rooms_path, class: 'btn btn-primary' do %>
		Back
	<% end %>
</div>

<% if @rooms.present? %>
	<nav class="nav flex-column">
		<% @rooms.each do |room| %>
			<%= link_to room.name, room_path(room), class: 'nav-link room-nav-link' %>
		<% end %>
	</nav>
<% else %>
	<div class="text-muted">
		There are no rooms to join
	</div>
<% end %>
